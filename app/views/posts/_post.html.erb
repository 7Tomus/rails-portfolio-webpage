<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><strong><%= post.title %></strong><br><br></p>
    <p class="comment_body"><%= post.description %><br><br>
      <img alt="post image" src="<%= post.image %>" /></p>
    <p class="comment_time"><%= time_ago_in_words(post.created_at) %> Ago</p>
  </div>
  <% if user_signed_in? %>
  <p><%= link_to 'Delete', [post.project, post],
         method: :delete,
         class: "button",
         data: {confirm: 'Are you sure?'} %></p>
  <% end %>
</div>