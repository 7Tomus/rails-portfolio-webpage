<div id="post_content">
  <h1 class="title">
    <%= @project.title %>
  </h1>

  <p class="date">
    Created <%= time_ago_in_words(@project.created_at) %> ago
    | <%= link_to 'Edit', edit_project_path(@project) %>
    | <%= link_to 'Delete', project_path(@project), method: :delete, data: {confirm: 'Are you sure?'} %>
  </p>

  <p class="body">
    <%= @project.description %>
  </p>
</div>